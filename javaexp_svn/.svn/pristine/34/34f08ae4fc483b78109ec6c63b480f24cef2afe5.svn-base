package javaexp.z02_homework.a12_ljh.vo;

public class Game {
	private String name;
	private int level = 1;
	private int hp = 1;
	
	public Game(String name) {
		this.name = name;
	}
	
	public void ShowInfo() {
		System.out.println("[캐릭터 정보창]");
		System.out.println("닉네임: " + name);
		System.out.println("레벨: " + level);
		System.out.println("HP: " + hp);
	}
	
	public void LevelUp() {
		level += 1;
		System.out.println("* 레벨업 +1 *");
		System.out.println("레벨이 " + level + "이(가) 되었습니다.");
	}
	
	public void Heal() {
		hp += 50;
		System.out.println("* 체력이 50 회복되었습니다. *");
		System.out.println("현재 체력은 " + hp + "입니다.");
	}
	
	
}
