package javaexp.z02_homework.a14_cms_0921;

public class Travel {
	private String destination;
	private int departureDate;
	private int arrivalDate;
	public Travel(String destination, int departureDate, int arrivalDate) {
		this.destination = destination;
		this.departureDate = departureDate;
		this.arrivalDate = arrivalDate;
		
	}
	public void showTravelInfo() {
		System.out.println("목적지: " + destination);
		System.out.println("출발일: " + departureDate);
		System.out.println("도착일: " + arrivalDate);
	}
	public void getTravelDay() {
		System.out.println("여행일수는"+ (arrivalDate -departureDate) );
	}
	
	

}
