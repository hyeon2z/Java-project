package javaexp.z02_homework.a06_psj.vo;

public class Character {
	String name;
	int level;
	int hp;
	public Character(String name) {
		this.name = name;
		level = 1;
		hp = 1;
	}
	public void levelUp(int a) {
		level+=a;
	}
	public void hpUp(int a) {
		hp+=a;
	}
	public void chaInfo() {
		System.out.println("\n이름: "+name);
		System.out.println("레벨: "+level);
		System.out.println("현재 체력: "+hp);
	}
	
}
