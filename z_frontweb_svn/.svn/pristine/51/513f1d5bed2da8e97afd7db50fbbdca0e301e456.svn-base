//5. **시간 변환 유틸리티**:
//    - 초를 입력받아 시, 분, 초로 변환하거나 그 반대의 기능
function convertTime(seconds) {
    const hours = Math.floor(seconds / 3600);
    const minutes = Math.floor((seconds % 3600) / 60);
    const scRemaining = seconds % 60;
    return { hours, minutes, seconds: scRemaining };
}
const inputSeconds = parseInt(prompt("초를 입력:"));
const time = convertTime(inputSeconds);
console.log(`시: ${time.hours}, 분: ${time.minutes}, 초: ${time.seconds}`);

//자바스크립트 미니프로젝트 (문자열 입력하면 처리해주고 배열에 넣어주는 코드 )
function processString(inputStr) {
  console.log('문자열의 길이:', inputStr.length);
  const words = inputStr.trim().split(/\s+/).filter(word => word !== ''); // 단어의 수
  console.log('단어 수:', words.length);

  console.log('대문자 변환:', inputStr.toUpperCase()); // 대문자 변환

  console.log('소문자 변환:', inputStr.toLowerCase());  // 소문자 변환
}

function addStrArray(...strings) {
  const stringArray = [];
  for (const str of strings) {
    stringArray.push(str);
  }
  console.log('문자열 배열:', stringArray);
}
const userInput = prompt('문자열을 입력하세요 (콤마로 문자열 구분 가능):');//문자열 입력
const inputArray = userInput.split(',');// 입력된 문자열을 콤마로 구분하여 배열로 변환

for (const str of inputArray) { // 문자열 처리 함수 호출
  processString(str);
}

addStrArray(...inputArray);// 문자열을 배열에 추가
    
    
    

       
           
           
           
           
