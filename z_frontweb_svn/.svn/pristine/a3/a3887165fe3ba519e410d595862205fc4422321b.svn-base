<script>
    var h4Ob = document.querySelector("h4")
    h4Ob.onclick = function(){  // 이벤트 핸들러 함수
        alert("안녕하세요") // 이벤트 내용
    }

    var h2Arr = document.querySelectorAll("h2")
    var pOb = document.querySelector("p")
    pOb.innerHTML+="<h2>--장바구니--</h2>"
    for(var idx=0;idx<h2Arr.length;idx++){
        h2Arr[idx].onclick=function(){
            pOb.innerHTML+="<h4>"+this.innerText+"</h4>"
        }
    }

    var num = 0
    var h3Ob = document.querySelector("h3")
    this.onkeyup=function(){
        if(event.keyCode==37) num--
        if(event.keyCode==39) num++
        h3Ob.innerHTML="<h3>"+num+"</h3>"
    }
    
</script>
