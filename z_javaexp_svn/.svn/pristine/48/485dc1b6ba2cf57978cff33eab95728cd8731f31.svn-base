package javaexp.z02_homework.a03_ls.vo;

public class Pen {
	String color;
	String brand;
	int price=1500;
	public Pen(String color, String brand, int price) {
		this.color = color;
		this.brand = brand;
		
	}
	public void penInfo() {
		System.out.println("# 펜 정보 #");
		System.out.println("펜 색상:"+color);
		System.out.println("펜 브랜드:"+brand);
		System.out.println("펜 가격:"+price);
	}
	public int getPrice() {
		return price;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	
}
