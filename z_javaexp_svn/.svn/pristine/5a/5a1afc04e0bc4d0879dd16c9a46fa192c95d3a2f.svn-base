package javaexp.z02_homework.a14_cms_0921;

public class Pen {
	private String color;
	private String brandName;
	private int price;
	
	public Pen(String color, String brandName) {
		this.color = color;
		this.brandName = brandName;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	public void showPenInfo() {
		System.out.println("펜 색은: " + color);
		System.out.println("펜의 브랜드는: " + brandName);
		System.out.println("펜의 가격은: " + price);
	}

}
